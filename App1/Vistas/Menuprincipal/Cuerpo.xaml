<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Vistas.Menuprincipal.Cuerpo"
              >

    <Grid RowDefinitions="180,*"
          Padding="12">
        <Frame CornerRadius="20"
               HasShadow="False"
               Grid.Row="1">
            <StackLayout Margin="0,40,0,0"
                         HorizontalOptions="Center">
                <Label Text="{Binding TipoEjercicio}"
                       FontAttributes="Bold"
                       FontSize="20"
                       TextColor="Black"/>
                <Label Text="Para principiantes"/>
                <Label Text="{Binding ejercicio}"
                       TextColor="Black"
                       FontAttributes="Bold"
                       FontSize="25"
                       HorizontalTextAlignment="Center"/>
            </StackLayout>
        </Frame>
        <Image Source="{Binding imagen}"
       TranslationY="40"
       />
    </Grid>
</ContentView>